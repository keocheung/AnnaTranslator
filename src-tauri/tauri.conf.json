{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Local Translator",
  "version": "0.1.0",
  "identifier": "com.example.localtranslator",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun dev --host --port 5173",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Local Translator",
        "label": "main",
        "width": 640,
        "height": 520,
        "resizable": true,
        "decorations": true,
        "visible": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
